#!/usr/bin/env python

import bluerov.video as Video
import cv2

def main():
    video = Video.Video()
    video.start()

    while True:
        if not video.frame_available():
            continue

        frame = video.frame()
        cv2.imshow('frame', frame)
        if cv2.waitKey(1) & 0xFF == ord('q'):
            break

if __name__ == '__main__':
    main()